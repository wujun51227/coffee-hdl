class RegComplex extends Module
  constructor: ->
    super()

    Port(
      hclk: input().asClock()
      rstn: input().asReset()
    )

    Reg(
      group:
        regFile: (reg(16) for i in [0..15])
        addEnable: reg(1)
    )

  build: ->
    always =>
      $if(@group.addEnable) =>
        for i in @group.regFile
          assign(i) => $ i + 1

module.exports=RegComplex

