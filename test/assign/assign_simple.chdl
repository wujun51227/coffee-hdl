class AssignSimple extends Module
  constructor: ->
    super()

    Port(
      din: input(5)
      dout: output(5)
      dout1: output(5)
      dout2: output(5)
    )

    Wire(
      w1: wire(5)
    )

  build: ->
    assign(@dout) =  @din + 1

    assign(@dout2(2:0)) = @w1.select((i)=>i%2==0)

    assign(@dout1) = @din + @w1

module.exports=AssignSimple

