class VecSimple extends Module
  constructor: ->
    super()
    Port(
      in1: input(5)
      enable: input()
      out1: output(16)
      addr:output(16)
    )

    Mem(
      mem: vec(16,1024)
    )

  build: ->
    always =>
      $if(@enable) =>
        #assign(@mem.index(10)) => $ @in1
        #assign(@mem.index(12)(3:2)) => $ @in1
        #assign(@out1) => $ @mem.index(100)+ @mem.index(11)(15:0)
        @mem.set(@addr, $ @in1)
        assign(@out1) => $ @mem.get(100)+ @mem.get(@in1)
      $endif

module.exports=VecSimple

