_=require 'lodash'

class DataMap extends Module
  constructor: ->
    super()
    
    Port(
      dout:output(16)
      bus:
        l1:
          k1:input(16)
          k2:input(16)
          l2:
            k1:input(16)
            k2:input(16)
            k3:output(16)
            k4:output(16)
    )


  build: ->
    assign(@dout) => $ @bus['l1'].k1
    assign(@bus.l1.l2['k3']) => $ @bus['l1']['l2'].k2
    assign(_.get(@bus,'l1.l2.k4')) => $ _.get(@bus,['l1','l2','k2'])


module.exports=DataMap

