bus=importLib('./bus_protocol.chdl')

class master_cell extends Module
  constructor: ->
    super()
    Mixin importLib('verilog_helpers.chdl')
    Port(
      master: bus.master()
    )

  build: ->
    v=vreg()
    assign @master.valid  = v

    initial
      $sequence()
      .init =>
        assign v = 0
      .delay(100) =>
        assign v = 1
      .delay(100) =>
        assign v = 0
      .delay(100) =>
        assign v = 1
      .delay(100) =>
        assign v = 0
      .end()

    initial
      $sequence()
      .delay(10) =>
        @assert_1(@master.ready,'check 1')
      .delay(110) =>
        @assert_0(@master.ready,'check 0')
      .delay(210) =>
        @assert_1(@master.ready,'check 1')
      .delay(310) =>
        @assert_0(@master.ready,'check 0')
      .delay(410) =>
        @assert_1(@master.ready,'check 1')
      .end()

module.exports=master_cell
